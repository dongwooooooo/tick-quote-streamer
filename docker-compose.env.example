# Docker Compose 환경 변수 예시 파일
# 이 파일을 .env로 복사하여 사용하세요: cp docker-compose.env.example .env

# Kafka 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ZOOKEEPER_CONNECT=localhost:2181

# MySQL 설정  
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=stock_streaming
MYSQL_USER=stock_user
MYSQL_PASSWORD=stock_pass
MYSQL_HOST=localhost
MYSQL_PORT=3306

# KIS API 설정
# 실전투자용 App Key/Secret
KIS_APP_KEY=your_real_app_key_here
KIS_APP_SECRET=your_real_app_secret_here

# 모의투자용 App Key/Secret (별도 발급 필요)
# 실전투자와 모의투자는 다른 App Key를 사용해야 Rate Limiting 방지
KIS_MOCK_APP_KEY=your_mock_app_key_here
KIS_MOCK_APP_SECRET=your_mock_app_secret_here

# KIS API URL 설정
# 모의투자환경 (추천): wss://openapivts.koreainvestment.com:9443
# 실제투자환경 (주의): wss://openapi.koreainvestment.com:9443  
# 개발테스트환경: ws://localhost:8090/kis-mock
KIS_WEBSOCKET_URL=wss://openapivts.koreainvestment.com:9443

# 서비스 포트 설정
QUOTE_COLLECTOR_PORT=8081
DATA_PROCESSOR_PORT=8082
SSE_STREAMER_PORT=8083
NOTIFICATION_SERVICE_PORT=8084
MOCK_WEBSOCKET_PORT=8090

# 모니터링 설정
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123
KAFKA_UI_PORT=8080